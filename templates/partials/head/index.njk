<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/spectre.css">
  <link rel="stylesheet" href="/css/spectre-icons.css">
  <link rel="stylesheet" href="/css/util.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/flash.css">
  <link rel="stylesheet" href="/css/accounts.css">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <header class="navbar bg-primary p--1">
    <section class="navbar-section">
      <a href="/" class="navbar-brand text-light mr-2">Task Fellow</a>
    </section>
    <section class="navbar-section">
      {% if user %}
        <div class="text-light mr-2">Logged in as <b>{{ user.username }}</b></div>
        <a href="/logout" class="btn">Logout</a>
      {% else %}
        <a href="/signup" class="btn">Sign up</a>
        <a href="/login" class="btn btn-link text-light">Log in</a>
      {% endif %}
    </section>
  </header>
  {% if flashErrors.length > 0 %}
    {% for flashError in flashErrors %}
      <div class="flash flash--error">{{ flashError }}</div>
    {% endfor %}
  {% endif %}
